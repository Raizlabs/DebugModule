<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/urlTitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/critter_url_title_text" />

        <TextView
            android:id="@+id/urlSpinnerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/critter_url_spinner_text" />

        <Spinner
            android:id="@+id/storedUrlSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/addUrlOption"
            android:hint="@string/critter_url_add_url_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textUri" />

        <Button
            android:id="@+id/saveUrlOption"
            android:text="@string/critter_url_save_button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>