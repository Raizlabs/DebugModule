<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="@dimen/DebugModule.Padding.Standard"
    >

    <TextView
        android:id="@+id/view_debug_module_preferences_title"
        android:textColor="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/DebugModule.PreferenceCritter.Title"/>

    <ListView
        android:id="@+id/view_debug_module_preferences_listView"
        android:descendantFocusability="beforeDescendants"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>